{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current Lab",
            "type": "shell",
            "command": "make",
            "args": [
                "LAB=${input:lab}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Current Lab",
            "type": "shell",
            "command": "make",
            "args": [
                "${input:runMode}",
                "LAB=${input:lab}"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Clean Current Lab",
            "type": "shell",
            "command": "make",
            "args": [
                "clean",
                "LAB=${input:lab}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Test Current Lab",
            "type": "shell",
            "command": "make",
            "args": [
                "test",
                "LAB=${input:lab}"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Clean All Builds",
            "type": "shell",
            "command": "make",
            "args": [
                "clean-all"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Launch Zsh + Btop Side by Side",
            "dependsOn": [
                "zsh: terminal",
                "btop: monitor"
            ],
            "group": "other",
            "problemMatcher": []
        },
        {
            "label": "zsh: terminal",
            "type": "shell",
            "icon": {
                "color": "terminal.ansiWhite",
                "id": "terminal-linux"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "zsh",
            "runOptions": {
                "runOn": "default"
            },
            "presentation": {
                "panel": "dedicated",
                "group": "side-by-side"
            }
        },
        {
            "label": "btop: monitor",
            "type": "shell",
            "icon": {
                "color": "terminal.ansiCyan",
                "id": "rocket"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "btop",
            "runOptions": {
                "runOn": "default"
            },
            "presentation": {
                "panel": "dedicated",
                "group": "side-by-side"
            }
        },

        {
            "label": "Create New Lab",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "echo 'Enter lab number (e.g., 601): ' && read labnum && labname=\"lab$labnum\" && if [ -d \"labs/$labname\" ]; then echo \"Lab $labname already exists!\"; else mkdir -p labs/$labname && echo \"Creating lab $labname...\" && cp labs/lab517/main.cpp labs/$labname/main.cpp && cp labs/lab517/Makefile labs/$labname/Makefile && echo \"# $labname Expected Output\" > labs/$labname/expected.txt && echo \"# $labname Input Data\" > labs/$labname/input.txt && echo \"Lab $labname created successfully!\" && echo \"Files created:\" && ls -la labs/$labname/; fi"
            ],
            "group": "other",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "lab",
            "description": "Lab name (e.g., lab515, lab517, lab625, lab627, lab630)",
            "default": "lab625",
            "type": "promptString"
        },
        {
            "id": "runMode",
            "description": "Choose run mode",
            "type": "pickString",
            "options": [
                "run",
                "manual"
            ],
            "default": "run"
        }
    ]
}